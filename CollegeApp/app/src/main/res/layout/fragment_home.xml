<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/netLinear">

                                <com.denzcoskun.imageslider.ImageSlider
                                    android:id="@+id/imageSlider"
                                    android:layout_width="wrap_content"
                                    android:layout_height="240dp"
                                    app:iss_auto_cycle="true"
                                    app:iss_period="2000"
                                    app:iss_delay="0" />

                                <VideoView
                                    android:layout_width="360dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="25dp"
                                    android:id="@+id/videoView" />

                        </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/advent_pro"
                    android:justificationMode="inter_word"
                    android:text="@string/college_info"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:cardElevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="15dp"
                            android:id="@+id/parentCard1">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:id="@+id/text1">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="1st in Coimbatore"
                                            android:textColor="#239049"
                                            android:textSize="20dp"/>

                                        <TextView
                                            android:layout_width="210dp"
                                            android:layout_height="wrap_content"
                                            android:text="Anna University academic performance"
                                            android:textSize="20dp"
                                            android:textColor="@color/dark_gray"/>

                                </LinearLayout>

                                <View
                                    android:id="@+id/line1"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="15dp"
                                    android:layout_toRightOf="@id/text1"
                                    android:background="@color/light_grey" />

                                <ImageView
                                    android:layout_width="210dp"
                                    android:layout_height="100dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@id/line1"
                                    android:src="@mipmap/first" />

                        </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:cardElevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="15dp"
                            android:id="@+id/parentCard2">

                                <ImageView
                                    android:id="@+id/image2"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@mipmap/gears" />

                                <View
                                    android:id="@+id/line2"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="15dp"
                                    android:layout_toRightOf="@id/image2"
                                    android:background="@color/light_grey" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@id/line2"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="3400+ Core Placements"
                                            android:textColor="#239049"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="In last 5 years"
                                            android:textColor="@color/dark_gray"
                                            android:textSize="20dp" />

                                </LinearLayout>



                        </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="15dp"
                            android:id="@+id/parentCard3">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:id="@+id/text3">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="1st Choice College"
                                            android:textColor="#239049"
                                            android:textSize="20dp"/>

                                        <TextView
                                            android:layout_width="210dp"
                                            android:layout_height="wrap_content"
                                            android:text="For student safety and holistic growth"
                                            android:textSize="20dp"
                                            android:textColor="@color/dark_gray"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/light_grey"
                                    android:layout_marginLeft="15dp"
                                    android:layout_toRightOf="@id/text3"
                                    android:layout_centerInParent="true"
                                    android:id="@+id/line3"/>

                                <ImageView
                                    android:layout_width="210dp"
                                    android:layout_height="100dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_toRightOf="@id/line3"
                                    android:src="@mipmap/bestchoice"
                                    android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Locate Us"
                                    android:textSize="36dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="20dp"/>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/gmaps"/>

                        </LinearLayout>

                </com.google.android.material.card.MaterialCardView>



        </LinearLayout>

</ScrollView>